@model WebCoba.Models.ChangePassword

@{
    ViewBag.Title = "Ganti Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item active">Keamanan</li>
                </ol>
            </nav>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-lock fa-2x"></i>
                        </div>
                        <h4 class="fw-bold text-dark">Ganti Password</h4>
                        <p class="text-muted small">Demi keamanan, gunakan kombinasi password yang kuat.</p>
                    </div>

                    @using(Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        if(!ViewData.ModelState.IsValid) {
                            <div class="alert alert-danger border-0 small shadow-sm mb-4">
                                @Html.ValidationSummary(true, "")
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label small fw-semibold text-secondary">Password Lama</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-unlock"></i></span>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control border-start-0 bg-light", placeholder = "Masukkan password saat ini" })
                            </div>
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger small" })
                        </div>

                        <hr class="my-4 text-light">

                        <div class="mb-3">
                            <label class="form-label small fw-semibold text-secondary">Password Baru</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-key"></i></span>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control border-start-0 bg-light", placeholder = "Minimal 6 karakter" })
                            </div>
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-semibold text-secondary">Konfirmasi Password Baru</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-check-double"></i></span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-start-0 bg-light", placeholder = "Ulangi password baru" })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-grid gap-2">
                            @Html.GButton("Update Password Sekarang", variant: "dark", htmlAttributes: new { type = "submit", @class = "py-2" })
                            <a href="@Url.Action("Index", "Home")" class="btn btn-link btn-sm text-secondary text-decoration-none text-center">Batal, Kembali ke Home</a>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="small text-muted">Lupa password lama? Hubungi <span class="text-primary cursor-pointer">Administrator</span></p>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #dee2e6;
    }

    .input-group-text {
        border-color: #dee2e6;
    }
</style>