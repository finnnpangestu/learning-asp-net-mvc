@model WebCoba.Models.Product

@{
    ViewBag.Title = "Edit Barang";
}

<div class="inv-form-container">
    <div class="inv-form-header">
        <h2>Edit Barang</h2>
        <p>Mengubah data untuk barang: <strong>@Model.Name</strong></p>
    </div>

    @using(Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id) 

        <div class="inv-form-body">
            <div class="form-group mb-3">
                <label class="form-label">Nama Barang</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Masukkan nama barang" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Harga</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", placeholder = "0" })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stok</label>
                    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number", placeholder = "0" })
                    @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger small" })
                </div>
            </div>

            <hr />

            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Index")" class="text-secondary text-decoration-none">
                    <i class="fas fa-arrow-left"></i> Batal
                </a>

                @Html.GButton("Simpan Perubahan", variant: "primary", icon: "fas fa-check-circle", htmlAttributes: new { type = "submit", @class = "px-4" })
            </div>
        </div>
    }
</div>