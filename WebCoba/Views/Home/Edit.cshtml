@model WebCoba.Models.Product

@{
    Layout = null;
}

<div class="modal-header border-0 pb-0">
    <div>
        <h5 class="modal-title fw-bold text-dark">Edit Barang</h5>
        <p class="text-muted small mb-0">Ubah item inventaris.</p>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    @using(Html.BeginForm("Edit", "Home", FormMethod.Post, new { id = "ajaxForm" })) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)

        <div class="inv-form-body">
            <div class="form-group mb-3">
                <label class="form-label small fw-bold text-secondary">Nama Barang</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control bg-light", placeholder = "Contoh: Laptop Asus ROG" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label small fw-bold text-secondary">Harga ($)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0"><i class="fas fa-dollar-sign"></i></span>
                        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control bg-light border-start-0", placeholder = "0" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label small fw-bold text-secondary">Stok Awal</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0"><i class="fas fa-cubes"></i></span>
                        @Html.EditorFor(m => m.Stock, new { htmlAttributes = new { @class = "form-control bg-light border-start-0", placeholder = "0" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger small" })
                </div>
            </div>
        </div>

        <div class="modal-footer border-0 px-0 pb-0 mt-3">
            <button type="button" class="btn btn-link text-secondary text-decoration-none btn-sm" data-bs-dismiss="modal">Batal</button>
            @Html.GButton("Simpan Data", variant: "primary", icon: "fas fa-save", htmlAttributes: new { type = "submit" })
        </div>
    }
</div>