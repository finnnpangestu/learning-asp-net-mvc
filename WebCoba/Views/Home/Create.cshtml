@model WebCoba.Models.Product

@{
    ViewBag.Title = "Create";
}

<h2>Tambah Barang</h2>

<div class="inv-form-container">

    @using(Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="inv-form-body">
            <div class="form-group mb-3">
                <label class="form-label">Nama Barang</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Contoh: Mesin Bor X1" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Harga</label>
                    @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stok</label>
                    @Html.EditorFor(m => m.Stock, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(m => m.Stock, "", new {  @class = "text-danger small" })
                </div>
            </div>

            <hr />

            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Index")" class="text-secondary text-decoration-none">
                    <i class="fas fa-arrow-left"></i> Kembali ke Daftar
                </a>

                @Html.GButton("Simpan Barang", variant: "primary", icon: "fas fa-check-circle", htmlAttributes: new { type = "submit", @class = "px-4" })
                )
            </div>
        </div>
    }
</div>
