@model WebCoba.Models.Product

@{
    Layout = null;
}

<div class="modal-header border-0 pb-0">
    <div>
        <h5 class="modal-title fw-bold text-dark">Detail Barang</h5>
        <p class="text-muted small mb-0">Informasi lengkap aset inventaris.</p>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="inv-form-body">
        <div class="mb-3">
            @if(Model.Stock > 0) {
                <span class="badge rounded-pill bg-light text-success border border-success border-opacity-25 px-3">
                    <i class="fas fa-check-circle me-1"></i> Tersedia
                </span>
            } else {
                <span class="badge rounded-pill bg-light text-danger border border-danger border-opacity-25 px-3">
                    <i class="fas fa-exclamation-triangle me-1"></i> Stok Habis
                </span>
            }
        </div>

        <div class="detail-item mb-4">
            <label class="text-muted small text-uppercase fw-bold d-block">Nama Barang</label>
            <h4 class="fw-bold text-dark">@Model.Name</h4>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="p-3 border rounded-3 bg-light">
                    <label class="text-muted small text-uppercase fw-bold d-block">Harga Satuan</label>
                    <span class="h5 fw-bold text-primary">@Model.Price.ToString("C")</span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="p-3 border rounded-3 bg-light">
                    <label class="text-muted small text-uppercase fw-bold d-block">Jumlah Stok</label>
                    <span class="h5 fw-bold text-dark">@Model.Stock <small class="text-muted">Unit</small></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer border-0 pt-0">
    <div class="d-flex justify-content-between w-100 align-items-center">
        <button type="button" class="btn btn-link text-secondary text-decoration-none btn-sm" data-bs-dismiss="modal">
            <i class="fas fa-arrow-left me-1"></i> Kembali
        </button>

        <div class="d-flex gap-2">
            <button type="button"
                    onclick="openModal('@Url.Action("Edit", "Home", new { id = Model.Id })')"
                    class="g-btn g-btn-warning g-btn-sm">
                <i class="fas fa-edit me-1"></i> Edit Data
            </button>
        </div>
    </div>
</div>