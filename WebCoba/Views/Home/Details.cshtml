@model WebCoba.Models.Product

@{
    ViewBag.Title = "Detail Barang";
}

<div class="inv-form-container">
    <div class="inv-form-header d-flex justify-content-between align-items-start">
        <div>
            <h2>Detail Barang</h2>
            <p>Informasi lengkap mengenai aset inventaris.</p>
        </div>
        @if(Model.Stock > 0) {
            <span class="badge bg-success p-2 px-3">Tersedia</span>
        } else {
            <span class="badge bg-danger p-2 px-3">Stok Habis</span>
        }
    </div>

    <div class="inv-form-body mt-4">
        <div class="detail-item mb-4">
            <label class="text-muted small text-uppercase fw-bold">Nama Barang</label>
            <h3 class="fw-semibold text-dark">@Model.Name</h3>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="p-3 border rounded-3 bg-light">
                    <label class="text-muted small text-uppercase fw-bold d-block">Harga Satuan</label>
                    <span class="h4 fw-bold text-primary">@Model.Price.ToString("C")</span>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="p-3 border rounded-3 bg-light">
                    <label class="text-muted small text-uppercase fw-bold d-block">Jumlah Stok</label>
                    <span class="h4 fw-bold text-dark">@Model.Stock <small class="text-muted">Unit</small></span>
                </div>
            </div>
        </div>

        <hr />

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="@Url.Action("Index")" class="text-secondary text-decoration-none">
                <i class="fas fa-arrow-left"></i> Kembali ke Daftar
            </a>

            <div class="d-flex gap-2">
                <a href="@Url.Action("Edit", new { id = Model.Id })" style="text-decoration:none">
                    @Html.GButton("Edit Barang", variant: "warning", icon: "fas fa-edit")
                </a>
            </div>
        </div>
    </div>
</div>