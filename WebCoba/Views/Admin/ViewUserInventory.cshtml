@model IEnumerable<WebCoba.Models.Product>

@section styles {
    <link href="~/Content/Features/home.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Intip Inventory - " + ViewBag.TargetUser;
}

<div class="inv-header-section mt-4" style="border-left: 5px solid #17a2b8;">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-0">Inventory Milik: <span class="text-primary">@ViewBag.TargetUser</span></h2>
            <p class="text-muted small mb-0">
                <i class="fas fa-database me-1"></i> Terhubung ke: <code class="text-info fw-bold">@ViewBag.DbName</code>
            </p>
        </div>
        <span class="badge bg-info text-white p-2 px-3 rounded-pill shadow-sm">
            <i class="fas fa-user-shield me-1"></i> Admin View Mode
        </span>
    </div>
</div>

<div class="inv-layout-container mt-4">
    <div class="inv-table-card shadow-sm">
        <div class="table-responsive">
            <table class="table" id="productTable">
                <thead>
                    <tr>
                        <th style="width: 40%">Nama Barang</th>
                        <th>Harga</th>
                        <th>Status Stok</th>
                        <th class="text-center">Informasi</th>
                    </tr>
                </thead>

                <tbody>
                    @if(Model != null && Model.Any()) {
                        foreach(var item in Model) {
                            <tr>
                                <td class="fw-semibold text-dark">@item.Name</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    @if(item.Stock > 0) {
                                        <span class="badge rounded-pill bg-light text-success border border-success border-opacity-25 px-3">
                                            <i class="fas fa-check-circle me-1"></i> @item.Stock Unit
                                        </span>
                                    } else {
                                        <span class="badge rounded-pill bg-light text-danger border border-danger border-opacity-25 px-3">
                                            <i class="fas fa-exclamation-triangle me-1"></i> Habis
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="text-muted small">ID Barang: #@item.Id</span>
                                </td>
                            </tr>
                        }
                    } else {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="empty-state py-4">
                                    <i class="fas fa-folder-open fa-3x text-light mb-3"></i>
                                    <h5 class="text-muted fw-normal">User ini belum memiliki barang.</h5>
                                    <p class="small text-secondary">Database user masih kosong.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-start">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> Kembali ke Manajemen User
        </a>
    </div>
</div>